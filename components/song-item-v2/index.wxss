/* components/song-item-v2/index.wxss */
.item {
    display: flex;
    align-items: center;
    margin: 36rpx 0 10rpx;
}
.index {
    font-size: 35rpx;
    padding: 14rpx;
}
.info {
    flex: 1;
    margin-left: 16rpx;
}
.info .name {
    font-size: 34rpx;
    font-weight: 500;
}
.info .source {
    display: flex;
    align-items: center;
    color: #666;
    font-size: 24rpx;
    margin-top: 5rpx;
}
.source .icon {
    width: 38rpx;
    height: 22rpx;
    margin-right: 10rpx;
}
.source .dots {
    margin: 0 6rpx;
}