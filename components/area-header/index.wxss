
/* components/area-header/index.wxss */
.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 88rpx;
}
.header .title {
    font-size: 36rpx;
    font-weight: 700;
}
/* 通过css解决微信小程序不支持默认插槽的问题 */
.header .slot:empty + .default {
    display: flex;
  }
.header .default {
    display: none;
    align-items: center;
    font-size: 28rpx;
    color: #777;
}
.header .default .icon {
    width: 50rpx;
    height: 50rpx;
}